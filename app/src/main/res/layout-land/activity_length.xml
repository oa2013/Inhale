<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/smaller_margin"
    android:paddingBottom="@dimen/smaller_margin"
    android:background="@drawable/celestial_gradient"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_inhalation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/smaller_margin"
            android:layout_marginTop="@dimen/smaller_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/smaller_margin"
            android:text="@string/exhalation_inhalation"
            android:textColor="@color/white"
            android:textSize="@dimen/timer_textSize" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_length"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rv_length_height_landscape"
            android:layout_marginBottom="@dimen/smaller_margin"
            android:layout_marginEnd="@dimen/smaller_margin"
            android:layout_marginStart="@dimen/smaller_margin"
            android:layout_marginTop="@dimen/smaller_margin" />

        <TextView
            android:id="@+id/tv_important"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/smaller_margin"
            android:layout_marginEnd="@dimen/smaller_margin"
            android:layout_marginStart="@dimen/smaller_margin"
            android:layout_marginTop="@dimen/smaller_margin"
            android:text="@string/important"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>
